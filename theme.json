{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "palette": [
        {
          "slug": "verde-primario",
          "color": "#6f8a2b",
          "name": "Verde Primario"
        },
        {
          "slug": "azzurro-secondario",
          "color": "#379db2",
          "name": "Azzurro Secondario"
        },
        {
          "slug": "rosa-accento",
          "color": "#e66395",
          "name": "Rosa Accento"
        },
        {
          "slug": "giallo-highlight",
          "color": "#ded771",
          "name": "Giallo Highlight"
        },
        {
          "slug": "dark",
          "color": "#1f2937",
          "name": "Scuro"
        },
        {
          "slug": "gray-700",
          "color": "#374151",
          "name": "Grigio Scuro"
        },
        {
          "slug": "gray-500",
          "color": "#6b7280",
          "name": "Grigio Medio"
        },
        {
          "slug": "gray-300",
          "color": "#d1d5db",
          "name": "Grigio Chiaro"
        },
        {
          "slug": "gray-100",
          "color": "#f3f4f6",
          "name": "Grigio Molto Chiaro"
        },
        {
          "slug": "light",
          "color": "#f8fafc",
          "name": "Sfondo Chiaro"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "Bianco"
        }
      ],
      "gradients": [
        {
          "slug": "verde-azzurro",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--verde-primario) 0%, var(--wp--preset--color--azzurro-secondario) 100%)",
          "name": "Verde-Azzurro"
        },
        {
          "slug": "rosa-giallo",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--rosa-accento) 0%, var(--wp--preset--color--giallo-highlight) 100%)",
          "name": "Rosa-Giallo"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "slug": "open-sans",
          "fontFamily": "'Open Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "Open Sans"
        },
        {
          "slug": "inter",
          "fontFamily": "Inter, system-ui, sans-serif",
          "name": "Inter"
        },
        {
          "slug": "playfair",
          "fontFamily": "'Playfair Display', Georgia, 'Times New Roman', Times, serif",
          "name": "Playfair Display"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Piccolo"
        },
        {
          "slug": "normal",
          "size": "16px",
          "name": "Normale"
        },
        {
          "slug": "medium",
          "size": "18px",
          "name": "Medio"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "Grande"
        },
        {
          "slug": "x-large",
          "size": "32px",
          "name": "Extra Grande"
        },
        {
          "slug": "xx-large",
          "size": "48px",
          "name": "Titolo"
        },
        {
          "slug": "xxx-large",
          "size": "64px",
          "name": "Hero"
        }
      ]
    },
    "spacing": {
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "8px",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "16px",
          "name": "Small"
        },
        {
          "slug": "md",
          "size": "24px",
          "name": "Medium"
        },
        {
          "slug": "lg",
          "size": "32px",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "48px",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "64px",
          "name": "2X Large"
        },
        {
          "slug": "3xl",
          "size": "96px",
          "name": "3X Large"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--dark)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--open-sans)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair)",
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        },
        "color": {
          "text": "var(--wp--preset--color--dark)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--open-sans)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontWeight": "600"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)",
          "fontWeight": "600"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--verde-primario)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--azzurro-secondario)"
          }
        }
      },
      "button": {
        "border": {
          "radius": "8px"
        },
        "color": {
          "background": "var(--wp--preset--color--verde-primario)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontWeight": "600",
          "fontSize": "var(--wp--preset--font-size--normal)"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "bottom": "12px",
            "left": "24px",
            "right": "24px"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--azzurro-secondario)"
          }
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "secondary": {
            "color": {
              "background": "var(--wp--preset--color--rosa-accento)",
              "text": "var(--wp--preset--color--white)"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--giallo-highlight)",
                "text": "var(--wp--preset--color--dark)"
              }
            }
          },
          "outline": {
            "color": {
              "background": "transparent",
              "text": "var(--wp--preset--color--verde-primario)"
            },
            "border": {
              "color": "var(--wp--preset--color--verde-primario)",
              "width": "2px"
            },
            ":hover": {
              "color": {
                "background": "var(--wp--preset--color--verde-primario)",
                "text": "var(--wp--preset--color--white)"
              }
            }
          }
        }
      },
      "core/group": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "0px"
          }
        }
      },
      "core/columns": {
        "spacing": {
          "margin": {
            "top": "0px",
            "bottom": "0px"
          }
        }
      }
    }
  }
}
{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "palette": [
        {
          "slug": "verde-primario",
          "color": "#6f8a2b",
          "name": "Verde Primario"
        },
        {
          "slug": "azzurro-secondario",
          "color": "#379db2",
          "name": "Azzurro Secondario"
        },
        {
          "slug": "rosa-accento",
          "color": "#e66395",
          "name": "Rosa Accento"
        },
        {
          "slug": "giallo-highlight",
          "color": "#ded771",
          "name": "Giallo Highlight"
        },
        {
          "slug": "dark",
          "color": "#1f2937",
          "name": "Scuro"
        },
        {
          "slug": "light",
          "color": "#f8fafc",
          "name": "Chiaro"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "Bianco"
        },
        {
          "slug": "gray-100",
          "color": "#f3f4f6",
          "name": "Grigio Chiaro"
        },
        {
          "slug": "gray-500",
          "color": "#6b7280",
          "name": "Grigio Medio"
        }
      ],
      "gradients": [
        {
          "slug": "verde-azzurro",
          "gradient": "linear-gradient(135deg, #6f8a2b 0%, #379db2 100%)",
          "name": "Verde-Azzurro"
        },
        {
          "slug": "rosa-giallo",
          "gradient": "linear-gradient(135deg, #e66395 0%, #ded771 100%)",
          "name": "Rosa-Giallo"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "slug": "inter",
          "fontFamily": "Inter, system-ui, sans-serif",
          "name": "Inter"
        },
        {
          "slug": "playfair",
          "fontFamily": "Playfair Display, Georgia, serif",
          "name": "Playfair Display"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Piccolo"
        },
        {
          "slug": "normal",
          "size": "16px",
          "name": "Normale"
        },
        {
          "slug": "medium",
          "size": "18px",
          "name": "Medio"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "Grande"
        },
        {
          "slug": "x-large",
          "size": "32px",
          "name": "Extra Grande"
        },
        {
          "slug": "xx-large",
          "size": "48px",
          "name": "Titolo"
        },
        {
          "slug": "xxx-large",
          "size": "64px",
          "name": "Hero"
        }
      ]
    },
    "spacing": {
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "8px",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "16px",
          "name": "Small"
        },
        {
          "slug": "md",
          "size": "24px",
          "name": "Medium"
        },
        {
          "slug": "lg",
          "size": "32px",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "48px",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "64px",
          "name": "2X Large"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--dark)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--md)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair)",
          "fontSize": "var(--wp--preset--font-size--xxx-large)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        },
        "color": {
          "text": "var(--wp--preset--color--verde-primario)"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--playfair)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "var(--wp--preset--color--azzurro-secondario)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "600"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--verde-primario)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--azzurro-secondario)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--verde-primario)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontWeight": "600"
        },
        "border": {
          "radius": "6px"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "bottom": "12px",
            "left": "24px",
            "right": "24px"
          }
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--azzurro-secondario)"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}